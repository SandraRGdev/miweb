---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import ProjectCard from '../components/ProjectCard.astro';
import verflix_mv1 from '../img/verflix_mv1.webp';
import imgpro from '../img/imgpro.webp';
import elementor1 from '../img/elementor1.webp';

const projects = [
  {
    title: 'VerFlix',
    category: 'Web App / API',
    image: verflix_mv1.src,
    slug: 'verflix',
    large: true
  },
  { 
    title: 'ImgPros', 
    category: 'Web Tool / React', 
    image: imgpro.src, 
    slug: 'imgpros', 
    large: false 
  },
  {
    title: 'ElementorIA',
    category: 'Workflow Tool',
    image: elementor1.src,
    slug: 'elementoria',
    large: false
  }
];
---

<Layout title="Portfolio | codev">
	<Nav />
	
	<main class="pt-40 pb-20 px-4 bg-[#031605] min-h-screen">
		<header class="max-w-6xl mx-auto mb-20">
			<h1 class="text-6xl md:text-9xl font-light tracking-tighter uppercase leading-none portfolio-header opacity-0 translate-y-20">
				EXPLORA MI <br/><span class="text-[rgba(224,204,250,1)] italic font-light">TRABAJO</span>
			</h1>
      <p class="text-lime font-bold uppercase tracking-widest text-sm mt-8 portfolio-header opacity-0 translate-y-20">Proyectos Destacados / 2026</p>
		</header>

		<section class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{projects.map((project, index) => (
				<div class="portfolio-item opacity-0 translate-y-20">
          <ProjectCard {...project} />
        </div>
			))}
		</section>
	</main>

  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener('DOMContentLoaded', () => {
      // Header Animation
      gsap.to('.portfolio-header', {
        opacity: 1,
        y: 0,
        duration: 1.2,
        stagger: 0.2,
        ease: 'power4.out'
      });

      // Grid Animation
      gsap.to('.portfolio-item', {
        opacity: 1,
        y: 0,
        duration: 1,
        stagger: 0.1,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: '.portfolio-item',
          start: 'top 90%',
        }
      });
    });
  </script>
</Layout>
