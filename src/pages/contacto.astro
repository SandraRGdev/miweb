        <ContactForm />
      </div>
    </div>
	</main>

  <script>
    import { gsap } from 'gsap';

    document.addEventListener('DOMContentLoaded', () => {
      gsap.to('.contact-info', {
        opacity: 1,
        x: 0,
        duration: 1.2,
        ease: 'power4.out'
      });

      gsap.to('.contact-form-container', {
        opacity: 1,
        x: 0,
        duration: 1.2,
        delay: 0.2,
        ease: 'power4.out'
      });
    });
  </script>
</Layout>
