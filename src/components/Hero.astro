<section class="h-screen flex flex-col items-center justify-center relative overflow-hidden bg-deep-black">
  <div class="relative w-full max-w-[1800px] h-full flex flex-col items-center justify-center pt-20 md:pt-32">
    
    <!-- Background Content (Behind Image) -->
    <div class="absolute inset-x-0 top-[62%] -translate-y-1/2 flex flex-col items-center justify-center z-0 select-none pointer-events-none">
      <h1 class="!font-['League_Gothic'] text-[22vw] md:text-[18vw] leading-[0.8] text-[#E0D4C5] !tracking-tighter text-center uppercase opacity-0 hero-text-back translate-y-20">
        DISEÑADORA<br/>WEB
      </h1>
    </div>

    <!-- Image (Sandwich Middle) -->
    <div class="relative z-10 w-full h-full flex items-end justify-center pb-0">
      <div class="relative h-[75vh] md:h-[85vh] w-auto">
        <img 
          src="/sandra.png" 
          alt="Diseñadora Web" 
          class="h-full w-auto object-cover object-top opacity-0 hero-img translate-y-20"
        />
        <!-- Bottom Fade Gradient -->
        <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-deep-black to-transparent z-10"></div>
      </div>
    </div>

    <!-- Foreground Content (In Front of Image) -->
    <div class="absolute inset-x-0 top-[62%] -translate-y-1/2 flex flex-col items-center justify-center z-20 pointer-events-none">
      <h1 class="!font-['League_Gothic'] text-[22vw] md:text-[18vw] leading-[0.8] text-transparent !tracking-tighter text-center uppercase opacity-0 hero-text-front translate-y-20"
          style="-webkit-text-stroke: 1.5px #E0D4C5; text-stroke: 1.5px #E0D4C5;"
      >
        DISEÑADORA<br/>WEB
      </h1>
    </div>
    
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({ defaults: { ease: 'power4.out', duration: 1.5 } });

    tl.to('.hero-text-back', { opacity: 1, y: 0 })
      .to('.hero-img', { opacity: 1, y: 0 }, '-=1.2')
      .to('.hero-text-front', { opacity: 1, y: 0 }, '<');
  });
</script>
