<section class="min-h-screen flex flex-col items-center justify-center text-center px-4 pt-24 overflow-hidden">
  <div class="max-w-4xl space-y-6">
    <h1 class="hero-title text-4xl md:text-8xl font-black leading-[1.15] opacity-0 translate-y-20">
      DISEÑADORA & <br/>
      <span class="text-lime">FRONTEND DEV</span>
    </h1>
    
    <p class="hero-subtitle text-lg md:text-2xl text-white/60 max-w-2xl mx-auto opacity-0 translate-y-10">
      Creando experiencias digitales impactantes donde el diseño se encuentra con la tecnología de vanguardia.
    </p>

    <div class="hero-cta opacity-0 translate-y-10 pt-4">
      <a 
        href="/portfolio" 
        class="inline-block bg-lime text-deep-black px-8 py-4 rounded-full font-bold text-lg hover:scale-105 transition-transform"
      >
        Ver Proyectos
      </a>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({ defaults: { ease: 'power4.out', duration: 1.5 } });

    tl.to('.hero-title', { opacity: 1, y: 0, stagger: 0.2 })
      .to('.hero-subtitle', { opacity: 1, y: 0 }, '-=1')
      .to('.hero-cta', { opacity: 1, y: 0 }, '-=1');
  });
</script>
