---
import verflix1 from '../img/verflix1.webp';
import imgpro from '../img/imgpro.webp';
import elementor from '../img/elementor.webp';

const projects = [
  {
    title: "VerFlix",
    category: "Web App / API",
    image: verflix1.src,
    description: "Plataforma de streaming cinematic con integración de TMDB API.",
    slug: "verflix"
  },
  {
    title: "ImgPros",
    category: "Web Tool / React",
    image: imgpro.src,
    description: "Optimización y edición masiva de imágenes directamente en el navegador.",
    slug: "imgpros"
  },
  {
    title: "ElementorIA",
    category: "Workflow Tool / Extension",
    image: elementor.src,
    description: "Extensión para mejorar el flujo de maquetación responsive en Elementor.",
    slug: "elementoria"
  }
];
---

<section id="portfolio-section" class="py-16 md:py-32 bg-[#031605] relative">
  <!-- Subtle gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-[#0F1812]/20 pointer-events-none"></div>
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    
    <!-- Section Header -->
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8">
      <div>
        <span class="text-lime text-sm font-bold tracking-[0.2em] uppercase block mb-4">Portafolio</span>
        <h2 class="text-lime text-4xl md:text-5xl font-light tracking-tight uppercase">
          Proyectos que <br />
          <span class="text-[rgba(224,204,250,1)] italic font-light">hablan por sí solos.</span>
        </h2>
      </div>
      
      <!-- Filters -->
      <div class="flex gap-2 overflow-x-auto pb-2 md:pb-0">
        <button class="px-6 py-2 rounded-full border border-lime/10 bg-lime/10 text-lime hover:bg-lime hover:text-[#1A2820] transition-all text-sm font-light whitespace-nowrap active">Todos</button>
        <button class="px-6 py-2 rounded-full border border-[#E8E4DC]/10 text-[#E8E4DC]/60 hover:bg-[#E8E4DC]/5 hover:text-[#E8E4DC] transition-all text-sm font-light whitespace-nowrap">Web Design</button>
        <button class="px-6 py-2 rounded-full border border-[#E8E4DC]/10 text-[#E8E4DC]/60 hover:bg-[#E8E4DC]/5 hover:text-[#E8E4DC] transition-all text-sm font-light whitespace-nowrap">Apps</button>
      </div>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <a 
          href={`/portfolio/${project.slug}`} 
          class="group relative aspect-[3/4] rounded-[24px] overflow-hidden cursor-pointer block"
        >
          <!-- Image -->
          <img 
            src={project.image} 
            alt={project.title} 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          
          <!-- Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-[#0F1812]/95 via-[#0F1812]/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
            
            <!-- Content -->
            <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-100">
              <span class="text-lime/70 text-xs font-medium uppercase tracking-wider mb-2 block">{project.category}</span>
              <h3 class="text-2xl font-medium text-[#E8E4DC] mb-2">{project.title}</h3>
              <p class="text-[#E8E4DC]/70 text-sm mb-4 line-clamp-2 leading-relaxed font-light">{project.description}</p>
              
              <div class="flex items-center gap-2 text-lime font-light text-sm group-hover:gap-4 transition-all">
                Ver proyecto
                <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- View All Button -->
    <div class="mt-16 text-center">
      <a href="#" class="inline-flex items-center gap-2 px-8 py-4 rounded-full border border-[#E8E4DC]/10 bg-[#E8E4DC]/5 text-[#E8E4DC] font-light hover:bg-lime hover:text-[#1A2820] hover:border-lime transition-all group">
        Ver todos los proyectos
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

  </div>
</section>
