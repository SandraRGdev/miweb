<section id="contact-section" class="py-24 md:py-32 bg-[#031605] relative overflow-hidden">
  <!-- Subtle gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#0F1812]/20 to-transparent pointer-events-none"></div>
  
  <!-- Section Content -->
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24">
      
      <!-- Left Column: CTA & Info -->
      <div class="flex flex-col justify-center space-y-8">
        <div>
          <span class="text-lime text-sm font-bold tracking-[0.2em] uppercase block mb-4">Contacto</span>
          <h2 class="text-3xl md:text-5xl lg:text-5xl font-light leading-tight tracking-tight uppercase text-[#E8E4DC]">
            ¿Listo para empezar <br />
            <span class="text-[rgba(224,204,250,1)] italic font-light">tu proyecto?</span>
          </h2>
        </div>
        
        <p class="text-[#E8E4DC]/60 text-lg md:text-xl font-light leading-relaxed max-w-md">
          Cuéntanos sobre tu idea y juntos la haremos realidad. Responderemos en menos de 24 horas.
        </p>

        <div class="space-y-6 pt-8">
        </div>
      </div>

      <!-- Right Column: Form Card -->
      <div class="relative">
        <div class="absolute inset-0 bg-lime/20 blur-[100px] opacity-20 pointer-events-none transform translate-x-12 translate-y-12 rounded-full"></div>
        
        <div class="relative bg-white/[0.02] backdrop-blur-xl border border-white/10 p-8 md:p-10 rounded-[2rem] shadow-2xl">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label for="name" class="text-white/60 text-sm font-medium ml-1">Nombre *</label>
                <input type="text" id="name" placeholder="Tu nombre" class="w-full bg-deep-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/20 focus:outline-none focus:border-lime/50 focus:ring-1 focus:ring-lime/50 transition-all" />
              </div>
              <div class="space-y-2">
                <label for="email" class="text-white/60 text-sm font-medium ml-1">Email *</label>
                <input type="email" id="email" placeholder="tu@email.com" class="w-full bg-deep-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/20 focus:outline-none focus:border-lime/50 focus:ring-1 focus:ring-lime/50 transition-all" />
              </div>
            </div>

            <div class="space-y-2">
              <label for="company" class="text-white/60 text-sm font-medium ml-1">Empresa</label>
              <input type="text" id="company" placeholder="Tu empresa" class="w-full bg-deep-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/20 focus:outline-none focus:border-lime/50 focus:ring-1 focus:ring-lime/50 transition-all" />
            </div>

            <div class="space-y-2">
              <label for="service" class="text-white/60 text-sm font-medium ml-1">Servicio de interés</label>
              <div class="relative">
                <select id="service" class="w-full bg-deep-black/50 border border-white/10 rounded-xl px-4 py-3 text-white/80 focus:outline-none focus:border-lime/50 focus:ring-1 focus:ring-lime/50 transition-all appearance-none">
                  <option>Selecciona un servicio</option>
                  <option>Diseño UI/UX</option>
                  <option>Desarrollo Web</option>
                  <option>Estrategia Digital</option>
                  <option>Otro</option>
                </select>
                <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-white/40">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </div>
              </div>
            </div>

            <div class="space-y-2">
               <label for="message" class="text-white/60 text-sm font-medium ml-1">Mensaje *</label>
               <textarea id="message" rows="4" placeholder="Cuéntanos sobre tu proyecto..." class="w-full bg-deep-black/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/20 focus:outline-none focus:border-lime/50 focus:ring-1 focus:ring-lime/50 transition-all resize-none"></textarea>
            </div>

            <button type="submit" class="w-full bg-[rgba(224,204,250,1)] text-[#1A2820] font-bold uppercase tracking-wider py-4 rounded-xl hover:bg-lime hover:scale-[1.02] transition-all duration-300 shadow-[0_0_20px_rgba(224,204,250,0.3)]">
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>

    </div>
  </div>
</section>
