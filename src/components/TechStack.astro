---

<section class="py-12 bg-[#031605] overflow-hidden relative border-y border-white/10">
  <div class="tech-slider relative flex w-full">
    <!-- Gradient Masks -->
    <div class="absolute left-0 top-0 bottom-0 w-24 z-10 bg-gradient-to-r from-deep-black to-transparent pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-24 z-10 bg-gradient-to-l from-deep-black to-transparent pointer-events-none"></div>

    <!-- Scrolling Track -->
    <div class="slide-track flex items-center gap-16 animate-infinite-scroll">
      <!-- Original Set -->
      {technologies.map((tech) => (
        <div class="flex items-center gap-3 text-white/40 hover:text-[rgba(224,204,250,1)] transition-colors duration-300 group cursor-default">
          <div class="w-8 h-8 group-hover:scale-110 transition-transform" set:html={tech.icon} />
          <span class="text-lg font-bold tracking-wide uppercase">{tech.name}</span>
        </div>
      ))}
      
      <!-- Duplicate Set for Seamless Loop -->
      {technologies.map((tech) => (
        <div class="flex items-center gap-3 text-white/40 hover:text-[rgba(224,204,250,1)] transition-colors duration-300 group cursor-default">
          <div class="w-8 h-8 group-hover:scale-110 transition-transform" set:html={tech.icon} />
          <span class="text-lg font-bold tracking-wide uppercase">{tech.name}</span>
        </div>
      ))}
       <!-- Triplicate Set for Large Screens -->
       {technologies.map((tech) => (
        <div class="flex items-center gap-3 text-white/40 hover:text-[rgba(224,204,250,1)] transition-colors duration-300 group cursor-default">
          <div class="w-8 h-8 group-hover:scale-110 transition-transform" set:html={tech.icon} />
          <span class="text-lg font-bold tracking-wide uppercase">{tech.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes infinite-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .slide-track {
    width: max-content; 
    animation: infinite-scroll 40s linear infinite;
  }
  
  .slide-track:hover {
    animation-play-state: paused;
  }
</style>
